{
  "combatRules": {
    "description": "Combat resolution rules for Epoch Battles",
    "rules": [
      {
        "condition": "attacker_rank < defender_rank",
        "result": "attacker_wins",
        "description": "Lower rank number beats higher rank number"
      },
      {
        "condition": "attacker_rank > defender_rank", 
        "result": "defender_wins",
        "description": "Higher rank number loses to lower rank number"
      },
      {
        "condition": "attacker_rank === defender_rank",
        "result": "both_destroyed",
        "description": "Equal ranks destroy each other"
      }
    ],
    "specialCases": [
      {
        "attacker": "spy",
        "defender": "marshal",
        "result": "attacker_wins",
        "description": "Spy defeats top unit when attacking"
      },
      {
        "attacker": "marshal", 
        "defender": "spy",
        "result": "attacker_wins",
        "description": "Spy always loses when attacked."
      },
      {
        "attacker": "*",
        "defender": "bomb",
        "result": "both_destroyed_bomb",
        "exception": "miner",
        "description": "Bombs destroy attacking units and are destroyed in the process (except when defused by Miners)"
      },
      {
        "attacker": "miner",
        "defender": "bomb", 
        "result": "defender_destroyed",
        "description": "Miners can defuse bombs"
      },
      {
        "attacker": "*",
        "defender": "flag",
        "result": "attacker_wins",
        "description": "Home base is captured!"
      }
    ]
  },
  "movementRules": {
    "default": {
      "maxDistance": 1,
      "directions": ["up", "down", "left", "right"]
    },
    "scout": {
      "directions": ["up", "down", "left", "right"],
      "mustStop": "when_blocked_or_attacking"
    },
    "immobile": {
      "maxDistance": 0,
      "directions": [],
      "pieces": ["bomb", "flag"]
    }
  },
  "gamePhases": {
    "setup": {
      "description": "Players place their pieces on their starting rows",
      "actions": ["place_piece", "ready_up"]
    },
    "playing": {
      "description": "Turn-based movement and combat",
      "actions": ["move_piece", "attack", "forfeit"]
    },
    "finished": {
      "description": "Game over, winner determined",
      "actions": ["view_result", "rematch"]
    }
  }
}